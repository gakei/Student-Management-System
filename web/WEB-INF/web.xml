<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <!-- 类名 -->
        <servlet-name>HelloServlet</servlet-name>
        <!-- 所在的包 -->
        <servlet-class>com.WHJ.HelloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <!-- 访问的网址 -->
        <url-pattern>/TomcatTest</url-pattern>
    </servlet-mapping>

    <servlet>
        <!-- 类名 -->
        <servlet-name>ListServlet</servlet-name>
        <!-- 所在的包 -->
        <servlet-class>com.WHJ.ListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListServlet</servlet-name>
        <!-- 访问的网址 -->
        <url-pattern>/ListServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <!-- 类名 -->
        <servlet-name>ShowList</servlet-name>
        <!-- 所在的包 -->
        <servlet-class>com.WHJ.ShowList</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowList</servlet-name>
        <!-- 访问的网址 -->
        <url-pattern>/ShowList</url-pattern>
    </servlet-mapping>

</web-app>